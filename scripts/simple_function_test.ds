// Test user-defined functions in dialScript

// Simple function with no arguments
function sayHello(): string {
    os.console.log("Hello from function!");
    return "hello";
}

// Function with one argument
function double(x: int): int {
    return x * 2;
}

// Function with multiple arguments
function add(a: int, b: int): int {
    return a + b;
}

// Function that calls another function
function addAndDouble(x: int, y: int): int {
    var sum: add(x, y);
    return double(sum);
}

// Test recursion (factorial)
function factorial(n: int): int {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

// Main execution
os.console.log("Testing user-defined functions");

// Test simple function
var greeting: sayHello();
os.console.log("Returned: " + greeting);

// Test function with argument
var doubled: double(5);
os.console.log("Double of 5: " + doubled);

// Test function with multiple arguments
var sum: add(3, 7);
os.console.log("3 + 7 = " + sum);

// Test function calling another function
var result: addAndDouble(2, 3);
os.console.log("(2 + 3) * 2 = " + result);

// Test recursion
var fact5: factorial(5);
os.console.log("Factorial of 5: " + fact5);

os.console.log("Function tests complete!");
