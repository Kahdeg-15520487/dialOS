// Graphics test - draw various shapes

// Clear screen to black
os.display.clear(_color.black);

// Draw a diagonal line (cyan)
os.display.drawLine(50, 50, 190, 190, _color.cyan);

// Draw a horizontal line (red)
os.display.drawLine(20, 120, 220, 120, _color.red);

// Draw a vertical line (green)
os.display.drawLine(120, 20, 120, 220, _color.green);

// Draw some circles
os.display.drawCircle(60, 60, 30, _color.yellow, false);  // Yellow outline
os.display.drawCircle(180, 60, 25, _color.magenta, true);  // Magenta filled

// Draw some rectangles
os.display.drawRect(40, 160, 60, 40, _color.blue, false);  // Blue outline
os.display.drawRect(140, 160, 60, 40, _color.white, true);  // White filled

// Draw some text
os.display.drawText(60, 10, "Graphics Test", _color.white, 2);
os.display.drawText(70, 225, "dialOS", _color.cyan, 1);

os.console.print("Graphics test complete!");
